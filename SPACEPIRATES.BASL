GENSHIP: REM GENERATE SHIP DATA FOR SECTOR
B = INT(RND(1)*10)
P0=MAX(ABS(B-INT(RND(1)*5)),5)
B = B-P0
P1=MAX(ABS(B-INT(RND(1)*5)),5)
B = B-P1
P2=ABS(B)

O$=""

REM FIRST PART
RESTORE PARTRARITY
FOR I=0 TO P0
  READ P$ 
NEXT I
S = INT(RND(1)*(LEN(P$)-1))+1
P$= RIGHT$(LEFT$(P$,S),1)
O$= P$

REM SECOND PART
RESTORE PARTRARITY
FOR I=0 TO P1
  READ P$
NEXT I
S = INT(RND(1)*(LEN(P$)-1))+1
P$= RIGHT$(LEFT$(P$,S),1)
O$= O$ + P$

REM THIRD PART
RESTORE PARTRARITY
FOR I=0 TO P2
  READ P$
NEXT I
S = INT(RND(1)*(LEN(P$)-1))+1
P$= RIGHT$(LEFT$(P$,S),1)
O$= O$ + P$

REM CHECK IF A SHIP IS INVALID
IF LEN(O$)>3 OR LEN(O$)<3 THEN GOTO GENSHIPERR1

O$ = O$ + STR$(RND(1)*TI)

RETURN

