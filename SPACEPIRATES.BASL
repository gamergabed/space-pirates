VISUALSECT: REM VISUALIZE SECTOR INTO SMAP$
REM CLEAR SECTOR
FOR Y=1 TO 12
  FOR X=1 TO 12
    SMAP$(X,Y)=" . "
  NEXT X
NEXT Y
R0 = RND(-GS(QX,QY))
REM ! NOTE ! BECAUSE OF LIMITS IN BASIC, **THERE IS A SPESIFIC FORMAT!**
REM ! CONT ! FORMAT=SSBBPPPP??AAAAAA (S=STARS,B=BASES,P=PLANETS,A=ASTRIODS) 
REM - GENERATE STARS
REM -- POSITION
FOR I=1 TO 2
  XP=INT(RND(1)*12)+1 : YP=INT(RND(1)*12)+1
  ITEM(I,1)=XP : ITEM(I,2)=YP
NEXT I
REM -- VERIFY
T% = INT(GE%(QX,QY)/16383):REM GET BITS FOR STARS (SHIFT LEFT BY 14 BITS)
FOR I=1 TO 2
IF INT(T%/I)AND1=1 THEN SMAP$(ITEM(I,1),ITEM(I,2))=" + "
NEXT I
REM - GENERATE BASES
REM -- POSITION
FOR I=1 TO 2
  XP=INT(RND(1)*12)+1 : YP=INT(RND(1)*12)+1
  ITEM(I,1)=XP : ITEM(I,2)=YP
NEXT I
REM -- VERIFY
T% = INT(GE%(QX,QY)/4095):REM GET BITS FOR BASES (SHIFT LEFT BY 12 BITS)
FOR I=1 TO 2
IF INT(T%/I)AND1=1 THEN SMAP$(ITEM(I,1),ITEM(I,2))="<O>"
NEXT I
REM - GENERATE PLANETS
REM -- POSITION
FOR I=1 TO 4
  XP=INT(RND(1)*12)+1 : YP=INT(RND(1)*12)+1
  ITEM(I,1)=XP : ITEM(I,2)=YP
NEXT I
REM -- VERIFY
T% = INT(GE%(QX,QY)/255):REM GET BITS FOR PLANETS (SHIFT LEFT BY 8 BITS)
FOR I=1 TO 4
IF INT(T%/I)AND1=1 THEN SMAP$(ITEM(I,1),ITEM(I,2))=" "+CHR$(I+XP-YP+70)+" "
NEXT I
REM - GENERATE ASTROIDS
REM -- POSITION
FOR I=1 TO 6
  XP=INT(RND(1)*12)+1 : YP=INT(RND(1)*12)+1
  ITEM(I,1)=XP : ITEM(I,2)=YP
NEXT I
REM -- VERIFY
T% = INT(GE%(QX,QY))
FOR I=1 TO 6
IF INT(T%/I)AND1=1 THEN SMAP$(ITEM(I,1),ITEM(I,2))=" * " : REM ISNT DESTROYED
IF INT(T%/I)AND1=0 THEN SMAP$(ITEM(I,1),ITEM(I,2))=" , " : REM IS   DESTROYED
NEXT I

REM - PLACE ENTERPRISE
SMAP$(SX,SY)="YOU"
R0 = RND(-R)
RETURN

